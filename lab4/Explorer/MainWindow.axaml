<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:exp="clr-namespace:Explorer"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="Explorer.MainWindow"
        Title="Explorer"
        x:DataType="exp:Explorer"
		MinWidth="50"
        MinHeight="100"
        Width="600"
        Height="400">

    <Window.DataContext>
		<exp:Explorer/>
	</Window.DataContext>

	<ListBox Name="listBox" ItemsSource="{Binding ShownDirectory}" DoubleTapped="DoubleTappedHandler">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<Grid ColumnDefinitions="0.07*, *">
					<Image Name="myImage" HorizontalAlignment="Left" Grid.Column="0" Source="{Binding Icon}" Width="30"/>
					<TextBlock Name="textBlock" VerticalAlignment="Center" Grid.Column="1" Text="{Binding Name}"/>
				</Grid>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</Window>